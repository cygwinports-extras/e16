DESCRIPTION="Enlightenment window manager"
HOMEPAGE="http://enlightenment.org/"
SRC_URI="mirror://sourceforge/enlightenment/${P}.tar.gz"
PATCH_URI="1.0.10-cygwin.patch"

CYGCONF_ARGS="
	--enable-composite
	--enable-dbus
	--enable-nls
	--enable-sm
	--enable-xinerama
	--enable-xrandr
	--enable-xsync
	--disable-modules
	--disable-sound-esound
	--disable-visibility-hiding
"
